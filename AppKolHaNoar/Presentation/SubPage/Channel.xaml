            <TextBox Name="ChannelURL" Text="{Binding Name, Mode=TwoWay}"
       PlaceholderText="Enter channel URL" Grid.Column="1" Grid.Row="2"/>
            <TextBox Name="nameChannel" Text="{Binding Name, Mode=TwoWay}"
PlaceholderText="hjhvb" Grid.Column="1" Grid.Row="2" />
              <TextBox Name="shortggg" Text="{Binding Name, Mode=TwoWay}"
PlaceholderText="נתיוב לסרטונים הקצרים" Grid.Column="1" Grid.Row="2" />
                <TextBox Name="longkjj" Text="{Binding Name, Mode=TwoWay}"
PlaceholderText="נתיוב לסרטונים הארוכים" Grid.Column="1" Grid.Row="2" />
                <!-- Row 3 -->

        </StackPanel>
