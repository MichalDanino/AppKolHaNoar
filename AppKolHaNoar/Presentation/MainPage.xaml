<Page x:Class="AppKolHaNoar.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:AppKolHaNoar.Services"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid utu:SafeArea.Insets="VisibleBounds">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- תופס מקום לפי התוכן -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>

                <!-- תופס את כל הרוחב הנותר -->
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <StackPanel Background="Black"  Grid.Column="0" HorizontalAlignment="Left" Padding="40,200"  >
                <Border Width="60" Height="60" CornerRadius="30"  >
                    <Image Source="ms-appx:///Assets/unnamed.jpg"
           Stretch="UniformToFill"/>
                     <ToolTipService.ToolTip>
                <ToolTip Content="פרופיל"/>
            </ToolTipService.ToolTip>
                </Border>
            </StackPanel>

            <!-- Content -->
            <StackPanel  Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">

                <!-- Search Box -->
                <Border Background="White" Padding="8,50" CornerRadius="10"  Width="300">
                    <StackPanel Orientation="Vertical" Spacing="8">
                        <StackPanel Orientation="Horizontal"> 
                        <FontIcon Glyph="&#xE721;"/>
                        
                        <AutoSuggestBox x:Name="autoSuggestBox"
                            PlaceholderText="בחר ערוץ"
                            Text="{Binding AutoSuggestVM.SelectedText.Campaign_Name, Mode=OneWay}"
                            ItemsSource="{Binding AutoSuggestVM.Items}"
                            TextChanged="AutoSuggestBox_TextChanged"
                            SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                            LostFocus="AutoSuggestBox_LostFocus"
                            DisplayMemberPath="Campaign_Name"
                            Width="250"
                             />
                        </StackPanel>
                        <Button x:Name="RunUpdatin6g" Content="התחל הרצה" Background="Black" HorizontalAlignment="Center" Width="100"/>

                    </StackPanel>
                </Border>

                <!-- Dropdown List -->
                <Border Background="White" Padding="8,50" CornerRadius="10"  Width="300">
                    <StackPanel  HorizontalAlignment="Center" Orientation="Vertical">
                    <ComboBox x:Name="comboBoxChannel" Width="300" ItemsSource="{Binding Channels}"
                  DisplayMemberPath="ChannelExtension_Name"
                  SelectedItem="{Binding SelectedChannel, Mode=TwoWay}"/>
                        <Button x:Name="RunUpdating" Content="Sign In" Background="Black" HorizontalAlignment="Center" Width="100" Command="{Binding SendSelectedChannelCommand,Mode=TwoWay}"/>
                    </StackPanel>
                </Border>
               

            </StackPanel>
            <!-- Buttons -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Spacing="10">
                <Button x:Name="RunUpdating2" Content="Sign In" Background="Black" Foreground="Red" Width="100"/>
                <Button x:Name="ChangeDB" Content="שנה" Background="Black" Foreground="Red" Width="100" Command="{Binding SendSelectedinfoCommand,Mode=TwoWay}" />
                <Button x:Name="Password" Content="Sign In" Background="Black" Foreground="Red" Width="100"/>
                <ComboBox x:Name="ComboBoxDay" ItemsSource="{Binding DataTimeVM.DaysOfWeek}" SelectedItem="{Binding DataTimeVM.SelectedDay, Mode=TwoWay}" />
                <TextBlock x:Name="TextDay" Text="{Binding DataTimeVM.SelectedDay}" />
                <TimePicker x:Name="time"  />
                <Button x:Name="dataTime" Content="Submit" />
            </StackPanel>
            <ProgressRing x:Name="loadingRing" HorizontalAlignment="Center" VerticalAlignment="Center" IsActive="False"/>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Background="WhiteSmoke">
                <ProgressBar
                    x:Name="progressBar"
                 IsIndeterminate="True"
                  Visibility ="{Binding LoadingVisibility}" 
                  Height="30"
                   
                   Foreground="Red"
                   Background="White"/>
                <TextBlock x:Name="WaitText"  Text="{Binding ProgressText}"
                 Visibility ="{Binding LoadingVisibility}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Margin="0,20,0,0" FontSize="16"/>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>


